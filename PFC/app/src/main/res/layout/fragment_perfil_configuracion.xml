<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/FondoOscuro"
    tools:context=".PerfilConfiguracion">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="3"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Usuario"
            android:textSize="30dp"
            android:textColor="@color/LetraBlanco"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#000" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ivPerfil"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/rojoOscuro"
            android:textSize="20dp"
            android:text="Nombre del Usuario:"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etNombreUsuario"
            android:enabled="false"
            android:textColor="@color/LetraGrisClarito"
            />
        <TextView
            android:textColor="@color/rojoOscuro"
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre y Apellidos del Empleado:"/>
        <EditText
            android:textColor="@color/LetraGrisClarito"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etNombreEmpleado"
            />
        <Switch
            android:textColor="@color/rojoOscuro"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Respablecer ContraseÃ±a"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="vertical"
        android:layout_marginTop="30dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Vista"
            android:textColor="@color/LetraBlanco"
            android:textSize="30dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#000"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center|left"
            >
            <TextView
                android:textColor="@color/rojoOscuro"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tema: "
                />
            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/rbClaro"
                    android:layout_marginLeft="40dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Claro"
                    android:textColor="@color/LetraGrisClarito"/>

                <RadioButton
                    android:id="@+id/rbOscuro"
                    android:layout_marginLeft="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Oscuro"
                    android:textColor="@color/LetraGrisClarito"/>

            </RadioGroup>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center|left"
            >
            <TextView
                android:textColor="@color/rojoOscuro"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Idioma: "
                />
            <Spinner
                android:id="@+id/spnIdiomas"
                android:layout_marginLeft="40dp"
                android:layout_width="200dp"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:gravity="center"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/btnCerrarSesion"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="@string/CerrarSesion"
            android:layout_marginRight="20dp"
            android:background="@drawable/redondear_botones"
            android:backgroundTint="@color/rojoClarito" />

        <Button
            android:id="@+id/btnAplicarCambios"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="@string/AplicarCambios"
            android:layout_marginLeft="20dp"
            android:background="@drawable/redondear_botones"
            android:backgroundTint="@color/BotonAccederOscuro"/>

    </LinearLayout>

</LinearLayout>