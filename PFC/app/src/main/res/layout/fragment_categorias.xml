<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <!--        <Âªtools:context=".fragment_categorias" -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/etMeterCodigoPlato"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:hint="Mete codigo plato"/>

            <EditText
                android:id="@+id/etMeterNombrePlato"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:hint="Mete nombre plato"
                android:layout_marginLeft="16dp"/>
        </LinearLayout>


        <Button
            android:id="@+id/btnAplicarCambios"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:text="Aplicar filtros"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="110dp"
            android:background="@color/rojoOscuro"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/grisClarito"
            android:layout_marginTop="20dp"/>


        <ListView
            android:id="@+id/lvListadoPlatos"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>