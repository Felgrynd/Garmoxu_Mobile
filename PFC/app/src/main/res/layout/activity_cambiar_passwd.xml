<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30dp"
    android:background="@color/FondoOscuro"
    tools:context=".CambiarPasswd">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:text="Cambiar Contraseña"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="@color/LetraBlanco"
        android:gravity="center"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:layout_weight="19"
        >
        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/contrasena"
            android:background="@drawable/fondo_circular"
            />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:text="Su nueva contraseña debe de ser diferentes a las anteriores que han sido utilizados."
        android:gravity="center|top"
        android:textColor="@color/LetraGrisClarito"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20"
        android:orientation="vertical"
        >
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:passwordToggleEnabled="true"
            android:hint="Contraseña Actual"
            android:layout_marginBottom="20dp"
            android:textColorHint="@color/TextoHint1"
            app:passwordToggleTint="@color/PasswordEyes1"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:id="@+id/etActualPasswd"
                android:textColor="@color/TextoBlanco1"
                android:backgroundTint="@color/white"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:passwordToggleEnabled="true"
            android:hint="Nueva Contraseña"
            android:textColorHint="@color/TextoHint1"
            app:passwordToggleTint="@color/PasswordEyes1"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:id="@+id/etNuevoPasswd"
                android:textColor="@color/TextoBlanco1"
                android:backgroundTint="@color/white"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:passwordToggleEnabled="true"
            android:hint="Repetir Contraseña"
            android:textColorHint="@color/TextoHint1"
            app:passwordToggleTint="@color/PasswordEyes1"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:id="@+id/etRepetirPasswd"
                android:textColor="@color/TextoBlanco1"
                android:backgroundTint="@color/white"
                />
        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:gravity="center"
        android:orientation="vertical"
        >
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirmar"
            android:layout_marginHorizontal="20dp"
            android:id="@+id/btnCambiarPasswd"
            android:background="@drawable/custom_button_a"
            android:theme="@style/BotonNoMayusculas"
            android:backgroundTint="@color/BotonAccederOscuro"
            android:textColor="@color/TextoBlanco1"
            android:textStyle="bold"
            android:textSize="20dp"
            />

    </LinearLayout>

</LinearLayout>